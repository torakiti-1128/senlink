# 実行環境
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

# ビルド環境
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# 全プロジェクトの .csproj をコピーして一括で restore（キャッシュ効率化）
COPY ["src/SenLink.Api/SenLink.Api.csproj", "src/SenLink.Api/"]
COPY ["src/SenLink.Service/SenLink.Service.csproj", "src/SenLink.Service/"]
COPY ["src/SenLink.Domain/SenLink.Domain.csproj", "src/SenLink.Domain/"]
COPY ["src/SenLink.Infrastructure/SenLink.Infrastructure.csproj", "src/SenLink.Infrastructure/"]
COPY ["src/SenLink.Shared/SenLink.Shared.csproj", "src/SenLink.Shared/"]
RUN dotnet restore "src/SenLink.Api/SenLink.Api.csproj"

# ソースコード全体をコピーしてビルド
COPY src/ .
WORKDIR "/src/SenLink.Api"
RUN dotnet build "SenLink.Api.csproj" -c Release -o /app/build

# 公開用にパブリッシュ
FROM build AS publish
RUN dotnet publish "SenLink.Api.csproj" -c Release -o /app/publish /p:UseAppHost=false

# 最終イメージの作成
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SenLink.Api.dll"]